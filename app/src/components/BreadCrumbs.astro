---
interface Page {
  name: string,
  path: string,
}

interface Props {
  previousPages: Array<Page>,
}

const {
  previousPages,
} = Astro.props;

---

<div class="breadcrumb">
  <ul>
    {previousPages.map(((page, index) => (
      <li>
        <a href={page.path}>
          {page.name}
        </a> {(index + 1) === previousPages.length ? '' : (
        <img
          src="/images/icons/arrow-100.png"
          alt="Arrow icon"
          height="30"
          width="30"
        />
        )}
      </li>
    )))}
  </ul>
</div>

<style>
  .breadcrumb {
    ul {
      list-style-type: none;
      padding: 0;
      display: grid;
      grid-template-columns: max-content max-content max-content;
      align-items: center;
      gap: 1rem;

      li {
        display: grid;
        grid-template-columns: max-content max-content;
        gap: 1rem;
      }

      img {
        display: block;
      }
    }
  }
</style>