---
import Place from './Place.astro';

interface Props {
	data: Array<Place>;
}

interface Place {
  name: string,
  tags: Array<string>,
}

const {
  data,
} = Astro.props;

---

<div class="places-container">
  {data.map((place: Place) => {
    return (
      <Place data={place} />
    )
  })}
</div>

<style>
  .places-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--padding-large);
  }

  @media(min-width: 992px) {
    .places-container {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
