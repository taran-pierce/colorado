---
import Place from './Place.astro';

interface Props {
	data: Array<Location>;
}

interface Location {
  name: string,
  places: Array<Place>,
}

interface Place {
  name: string,
  imageGalleryKey: string,
  images: Array<string>,
}

const {
  data,
} = Astro.props;
---
<div class="places-container">
  {data.map((location: Location) => {
    return (
      <Place data={location} />
    )
  })}
</div>

<style>
  .places-container {
    border: 1px solid black;
    padding: 1rem;
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  @media(min-width: 992px) {
    .places-container {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
